<style type="text/css">

    
    .room_status_box {
        width: 10px;
        height: 23px;
        display: inline-block;
        margin-right: 3px;
    }

    .star_color {
        color: #F90;
    }

    .tf-nc {
        height: 120px;
        width: 270px;
    }

    .status_hierarchy_center {
        font-size: 12px;
    }

    .tab-content {
        margin-left: 10px;
        margin-right: 10px;
    }

    .nav-tabs {
        margin-left: 10px;
    }


    .dataTables_wrapper {
        background: #605ca8;
        border: 1px solid #ddd;
        padding-top: 5px;
    }

    .dataTables_length {
        padding-left: 10px;
    }

    .dataTables_filter {
        padding-right: 10px;
    }

    table.dataTable.no-footer {
        border-bottom: 1px solid #111;
        font-size: 14px;
    }

    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #aaa;
        border-radius: 3px;
        padding: 5px;
        background-color: #fff;
